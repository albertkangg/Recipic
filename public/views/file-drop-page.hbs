            });
            $('#drop_zone').on('dragenter',function(event){
                event.preventDefault();
                event.stopPropagation();
                {{!-- $(this).html('drop now').css('background','blue'); --}}
            })
            $('#drop_zone').on('dragleave',function(){
                {{!-- $(this).html('drop here').css('background','red'); --}}
                event.preventDefault();
                event.stopPropagation();
                $(this).html('Drag one or more files to this Drop Zone ...').css('background','white');
            });
            $('#drop_zone').on('dragover',function(event){
                event.preventDefault();
                event.stopPropagation();
                $(this).html('drop now').css('background','blue');
            });
            //machine-learning
            function predict(event){
                console.log(event.target.files[0]);
                var output = document.getElementById('output');
                output.src = URL.createObjectURL(event.target.files[0]);
                console.log(output.src);
                output.onload = function() {
                    URL.revokeObjectURL(output.src);
                }
                const classifier = ml5.imageClassifier("/model.json", modelLoaded);
                let prediction = classifier.predict(output, gotResults);
            }

            function gotResults(err, results) {
                console.log(results[0].label);
                let form = document.createElement('form');
                form.action = './recipes';
                form.method = 'GET';
                form.innerHTML = '<input name="food" value="'+results[0].label+'">';
                document.body.append(form);
                form.submit();
            }
            
            function modelLoaded() {
                console.log('Model Loaded!');
            }
        </script>
